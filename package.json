{
  "name": "@samhwang/resume-page",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "msw": {
    "workerDirectory": "public"
  },
  "engines": {
    "node": "^20.0.0",
    "pnpm": "^8.0.0"
  },
  "packageManager": "pnpm@8.15.3",
  "scripts": {
    "prepare": "panda codegen",
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "lint": "biome check ./src/*",
    "lint:fix": "biome check --apply ./src/**",
    "lint:fix:unsafe": "biome check --apply-unsafe ./src/**",
    "format": "biome format --write ./src/**",
    "ci": "biome ci ./src/**"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "pnpm run ci && pnpm run test:run"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --apply",
      "biome format --write"
    ]
  },
  "dependencies": {
    "@fontsource/mulish": "^5.0.16",
    "@fontsource/roboto": "^5.0.8",
    "@fontsource/saira-extra-condensed": "^5.0.18",
    "@popperjs/core": "^2.11.8",
    "@react-hookz/web": "^24.0.4",
    "@tanstack/react-router": "^1.16.6",
    "@tanstack/router-devtools": "^1.16.6",
    "bootstrap": "^5.3.2",
    "devicon": "^2.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@pandacss/dev": "^0.32.0",
    "@tanstack/router-cli": "^1.16.5",
    "@tanstack/router-vite-plugin": "^1.16.5",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@types/react-helmet": "^6.1.11",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/coverage-v8": "^1.3.0",
    "@vitest/ui": "^1.3.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.7",
    "vite-plugin-pwa": "^0.19.0",
    "vitest": "^1.3.0"
  }
}
