{
  "name": "@samhwang/resume-page",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "msw": {
    "workerDirectory": "public"
  },
  "engines": {
    "node": "^20.0.0",
    "pnpm": "^8.0.0"
  },
  "packageManager": "pnpm@8.14.1",
  "scripts": {
    "prepare": "panda codegen",
    "dev": "vite",
    "netlify": "netlify dev",
    "build": "vite build",
    "typecheck": "tsc",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "lint": "biome check ./src/*",
    "lint:fix": "biome check --apply ./src/**",
    "lint:fix:unsafe": "biome check --apply-unsafe ./src/**",
    "format": "biome format --write ./src/**",
    "ci": "biome ci ./src/**"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "pnpm run ci && pnpm run test:run"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --apply",
      "biome format --write"
    ]
  },
  "dependencies": {
    "@fontsource/mulish": "^5.0.16",
    "@fontsource/roboto": "^5.0.8",
    "@fontsource/saira-extra-condensed": "^5.0.18",
    "@pandacss/preset-base": "^0.26.2",
    "@pandacss/preset-panda": "^0.26.2",
    "@popperjs/core": "^2.11.8",
    "@react-hookz/web": "^24.0.2",
    "@tanstack/react-router": "^1.4.2",
    "@tanstack/router-devtools": "^1.4.2",
    "bootstrap": "^5.3.2",
    "devicon": "^2.15.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.1",
    "@pandacss/dev": "^0.26.2",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/react-helmet": "^6.1.11",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^1.1.3",
    "@vitest/ui": "^1.1.3",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.0",
    "netlify-cli": "^17.13.1",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.1.3"
  }
}
